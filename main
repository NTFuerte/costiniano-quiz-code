<body>
  <header>
    <h1>AI Video Quiz</h1>
  </header>

  <div class="quiz-container">
    <div id="question-area">
      <!-- Respondent info first -->
      <h2>Please select your age range:</h2>
      <div class="choices age-section">
        <div class="choice-block">
          <button class="age" onclick="setAge('13-28','Gen Z')">13–28</button>
          <div class="gen-label">Gen Z</div>
        </div>
        <div class="choice-block">
          <button class="age" onclick="setAge('29-44','Gen Y (Millennials)')">29–44</button>
          <div class="gen-label">Gen Y (Millennials)</div>
        </div>
        <div class="choice-block">
          <button class="age" onclick="setAge('45-60','Gen X')">45–60</button>
          <div class="gen-label">Gen X</div>
        </div>
        <div class="choice-block">
          <button class="age" onclick="setAge('61-79','Baby Boomers')">61–79</button>
          <div class="gen-label">Baby Boomers</div>
        </div>
      </div>
    </div>
    <div id="result" class="result"></div>
  </div>

  <script>
    // 15 total questions
    const questions = [
      { video: "https://www.youtube.com/embed/3wVpVH0Wa6E", text: "Which video is AI?" },
      { video: "https://www.youtube.com/embed/ANOTHER_VIDEO_ID1", text: "Which video is AI?" },
      { video: "https://www.youtube.com/embed/ANOTHER_VIDEO_ID2", text: "Which video is AI?" },
      { video: "https://www.youtube.com/embed/ANOTHER_VIDEO_ID3", text: "Which video is AI?" },
      { video: "https://www.youtube.com/embed/ANOTHER_VIDEO_ID4", text: "Which video is AI?" },
      { video: "https://www.youtube.com/embed/ANOTHER_VIDEO_ID5", text: "Which video is AI?" },
      { video: "https://www.youtube.com/embed/ANOTHER_VIDEO_ID6", text: "Which video is AI?" },
      { video: "https://www.youtube.com/embed/ANOTHER_VIDEO_ID7", text: "Which video is AI?" },
      { video: "https://www.youtube.com/embed/ANOTHER_VIDEO_ID8", text: "Which video is AI?" },
      { video: "https://www.youtube.com/embed/ANOTHER_VIDEO_ID9", text: "Which video is AI?" },
      { video: "https://www.youtube.com/embed/ANOTHER_VIDEO_ID10", text: "Which video is AI?" },
      { video: "https://www.youtube.com/embed/ANOTHER_VIDEO_ID11", text: "Which video is AI?" },
      { video: "https://www.youtube.com/embed/ANOTHER_VIDEO_ID12", text: "Which video is AI?" },
      { video: "https://www.youtube.com/embed/ANOTHER_VIDEO_ID13", text: "Which video is AI?" },
      { video: "https://www.youtube.com/embed/ANOTHER_VIDEO_ID14", text: "Which video is AI?" }
    ];

    let currentQuestion = 0;
    let userAnswers = [];
    let respondentAge = "";
    let respondentGeneration = "";

    function setAge(ageRange, generation) {
      respondentAge = ageRange;
      respondentGeneration = generation;
      document.getElementById("result").innerText = `Age range selected: ${ageRange} (${generation})`;
      // Load first quiz question
      setTimeout(() => {
        loadQuestion();
      }, 1000);
    }

    function answer(choice) {
      userAnswers.push({
        question: questions[currentQuestion].text,
        choice: choice
      });

      document.getElementById("result").innerText =
        `You selected: ${choice}`;

      setTimeout(() => {
        currentQuestion++;
        if (currentQuestion < questions.length) {
          loadQuestion();
        } else {
          document.getElementById("question-area").innerHTML =
            "<h2>Quiz Complete!</h2>";
        }
      }, 1500);
    }

    function loadQuestion() {
      document.getElementById("question-area").innerHTML = `
        <h2>${questions[currentQuestion].text}</h2>
        <iframe id="quiz-video" src="${questions[currentQuestion].video}" frameborder="0" allowfullscreen></iframe>
        <div class="choices video-section">
          <button class="video1" onclick="answer('Video 1')">Video 1</button>
          <button class="video2" onclick="answer('Video 2')">Video 2</button>
        </div>
      `;
      document.getElementById("result").innerText = "";
    }

    // Hidden export function — trigger manually from console
    function downloadCSV() {
      let csvContent = "data:text/csv;charset=utf-8,Age Range,Generation,Question,Answer\n";
      userAnswers.forEach(row => {
        csvContent += `${respondentAge},${respondentGeneration},${row.question},${row.choice}\n`;
      });

      const encodedUri = encodeURI(csvContent);
      const link = document.createElement("a");
      link.setAttribute("href", encodedUri);
      link.setAttribute("download", "quiz_answers.csv");
      document.body.appendChild(link);
      link.click();

      // NOTE: The CSV file will be downloaded to your browser's default "Downloads" folder.
    }
  </script>
</body>
</html>
